{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "assets/js",
    "build",
    "node_modules",
    "vendor"
  ]
}
